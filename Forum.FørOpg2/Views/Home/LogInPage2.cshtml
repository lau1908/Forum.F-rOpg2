@model Forum.FørOpg2.Models1.Bruger2

@{
    ViewBag.Title = "LogInPage2";
}










<div class="kk">
    @using (Html.BeginForm("LogInPage2", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    @Html.AntiForgeryToken()

    <div class="form-group centerlook" style="margin-left: 45%;">
        <h1> Login </h1>
    </div>
    if (ViewBag.Message != null)
    {
    if (ViewBag.Message == "Forkert brugernavn/mail eller kode")
    {
    <div style="border:solid 1px red">
        @ViewBag.Message
    </div>
    }
    else
    {

    <div style="border:solid 1px green">
        @ViewBag.Message
    </div>
    }
    }

    <div class="form-group centerlook" style="margin-left:45%;">

        @Html.EditorFor(model => model.UserMail, new { htmlAttributes = new { @class = "form-control", placeholder = "Username or Email" } })
        @Html.ValidationMessageFor(model => model.UserMail)
    </div>
    <div class="form-group centerlook" style="margin-left:45%;">

        @Html.EditorFor(model => model.Parsword, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
        @Html.ValidationMessageFor(model => model.Parsword)

    </div>
    <span>Don't have an account <a href="LogInPage"><span style="color:blue;">SIGN UP</span></a></span>
    <div class="loginbtn" style="margin-left: 45%;">

        <input type="submit" value="Login" class="btn btn-primary" />

    </div>

    }
</div>

<style>
    body {
        background-color: black;
    }

    .kk {
        background-color: white;
        justify-content: center;
    }
</style>

